---
import katalog from '../../data/catalogue.json';
import Dots from './katalog-thingz/dots.astro';
---
<section class="relative py-16 mx-auto">
  <!-- Decorative elements -->
  
  <div
    x-data=`{
      katalog: ${JSON.stringify(katalog.katalog)},
      currentIndex: 0,
      showDetails: false,
      next() { 
        this.currentIndex = (this.currentIndex + 1) % this.katalog.length; 
        this.showDetails = false;
      },
      prev() { 
        this.currentIndex = (this.currentIndex - 1 + this.katalog.length) % this.katalog.length; 
        this.showDetails = false;
      }
    }`
    class="relative bg-white rounded-2xl shadow-red-200 shadow-md min-w-[500px] min-h-[500px]"
  >
  <template x-for="(item, index) in katalog" :key="index">
    <div
      x-show="currentIndex === index"
      x-cloak
      x-transition:enter="transition ease-in-out duration-500"
      x-transition:enter-start="opacity-0 translate-x-8"
      x-transition:enter-end="opacity-100 translate-x-0"
      x-transition:leave="transition ease-in-out duration-300"
      x-transition:leave-start="opacity-100 translate-x-0"
      x-transition:leave-end="opacity-0 -translate-x-8"
      class="flex flex-row items-center justify-between absolute inset-0 p-8"
    >      
      <!-- Image Container - Left side -->
      <div class="w-1/2 pr-8 z-10 pointer-events-auto">
        <div class="ml-20 relative shadow-red-200 hover:shadow-lg transition-shadow duration-300 ease-in-out">
          <img
            :src="item.image"
            :alt="item.model"
            class="max-h-[500px] w-full object-contain rounded-lg shadow-md transition-transform duration-500 ease-in-out hover:scale-105"
          />
          <div class="absolute -top-2 -left-2 w-4 h-4 bg-red-600 rounded-full"></div>
        </div>
      </div>
      <div class="w-1/2 pl-8 flex flex-col space-y-6 z-10 pointer-events-auto">
        <h2 class="font-urbanist text-6xl font-bold tracking-wide text-gray-900" x-text="item.model"></h2>
        <div class="text-xl font-medium text-red-600 tracking-widest font-urbanist">
          Starting from
          <span class="text-2xl font-bold ml-1" x-text="item.detail.Harga.value"></span>
        </div>
        <div class="flex items-center space-x-4 mt-4 relative">
          <a href="https://wa.me/6281333292628" target="_blank" rel="noopener noreferrer">
            <button
              @click="console.log('Buy Now clicked')"
              class="font-urbanist text-base px-6 py-3 bg-red-600 text-white rounded-full tracking-wide transition-all duration-300 ease-in-out hover:bg-red-700 hover:shadow-md z-20 relative"
            >
              Buy Now
            </button>
          </a>
          <button
            @click="window.open(item.detail.Button.value.match(/href='([^']+)'/)[1], '_blank')"
            class="font-urbanist text-base px-6 py-3 bg-gray-200 text-gray-900 rounded-full tracking-wide transition-all duration-300 ease-in-out hover:bg-gray-300 hover:shadow-md z-20 relative"
          >
            <i class="fas fa-info-circle mr-2"></i>
            Learn More
          </button>
        </div>
      </div>
    </div>
  </template>
    <div class="absolute inset-y-0 left-0 right-0 flex items-center justify-between pointer-events-none px-4 z-10">
      <button 
        @click="prev()" 
        class="pointer-events-auto bg-white text-red-600 w-12 h-12 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110 shadow-md"
      >
        <i class="fas fa-chevron-left text-xl"></i>
      </button>
      <button 
        @click="next()" 
        class="pointer-events-auto bg-white text-red-600 w-12 h-12 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110 shadow-md"
      >
        <i class="fas fa-chevron-right text-xl"></i>
      </button>
    </div>
    
    <!-- Dots indicator -->
    <div class="absolute bottom-4 left-0 right-0 flex justify-center">
      <Dots />
    </div>
  </div>
  
  <!-- Additional decorative elements -->
  <div class="absolute top-1/4 right-0 w-16 h-16 bg-red-50 rounded-full opacity-50"></div>
  <div class="absolute bottom-1/3 left-0 w-24 h-24 bg-gray-50 rounded-full opacity-60"></div>
</section>
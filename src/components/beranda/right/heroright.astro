<!-- Desktop Version (Default) -->
<div class="hidden md:flex ml-[200px] mb-[300px] justify-end w-full max-w-none bg-transparent">
  <template x-for="(car, index) in cars" :key="car.model">
    <img
      x-bind:src="car.image"
      x-bind:alt="car.model"
      class="w-[950px] max-w-none h-auto object-contain absolute"
      x-show="currentCarIndex === index"
      x-transition:enter="transition transform ease-in-out duration-500"
      x-transition:enter-start="opacity-0 translate-x-full"  
      x-transition:enter-end="opacity-100 translate-x-0" 
      x-transition:leave="transition transform ease-in-out duration-500"
      x-transition:leave-start="opacity-100 translate-x-0"
      x-transition:leave-end="opacity-0 translate-x-full"
    />
  </template>
</div>

<!-- Mobile Version -->
<div class="md:hidden flex justify-center items-center w-full bg-transparent">
  <template x-for="(car, index) in cars" :key="car.model">
    <img
      x-bind:src="car.image"
      x-bind:alt="car.model"
      class="w-[90%] max-w-[350px] h-auto object-contain"
      x-show="currentCarIndex === index"
      x-transition:enter="transition transform ease-in-out duration-300"
      x-transition:enter-start="opacity-0 scale-90"  
      x-transition:enter-end="opacity-100 scale-100" 
      x-transition:leave="transition transform ease-in-out duration-300"
      x-transition:leave-start="opacity-100 scale-100"
      x-transition:leave-end="opacity-0 scale-90"
    />
  </template>
</div>
